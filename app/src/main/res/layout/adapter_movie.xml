<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imv_movie_adapter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/video_player"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blackopac"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/txt_titulo_adapter"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/h3"
                    android:padding="5dp"
                    />
                <ImageView
                    android:id="@+id/imv_assistido_adapter"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/success_white"
                    android:scaleType="fitCenter"
                    android:layout_margin="5dp"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/bluebottom"/>
</LinearLayout>
