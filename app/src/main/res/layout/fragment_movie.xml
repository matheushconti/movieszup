<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fundo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rl_ultimofilme"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#000">
            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_ic"
                android:layout_margin="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:padding="15dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_titulo_ultimofilme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Os Vingadores"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titulo"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/txt_desc_ultimofilme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2012 - 150min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h4"
                    android:gravity="right"
                    />
                </LinearLayout>
                <ImageView
                    android:id="@+id/imv_add_ultimofilme"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/logo_ic"/>
                <ImageView
                    android:id="@+id/imv_assistido_ultimofilme"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/logo_ic"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:padding="10dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordenar por Mais Recente"
                android:textSize="@dimen/h3"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:src="@drawable/logo_ic"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>
