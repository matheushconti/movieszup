<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fundo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#000">

            <ImageView
                android:id="@+id/imv_filme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>


            <LinearLayout
                android:id="@+id/ll_filme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/blackopac">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_titulo_filme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titulo"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/calendar"
                                    />
                                <TextView
                                    android:id="@+id/txt_year_filme"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="..."
                                    android:textSize="@dimen/h4"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/file"
                                    />
                                <TextView
                                    android:id="@+id/txt_genre_filme"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="..."
                                    android:textSize="@dimen/h4"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_marginBottom="5dp">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/time"
                                    />
                                <TextView
                                    android:id="@+id/txt_duration_filme"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="..."
                                    android:textSize="@dimen/h4"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="15dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/flag"
                                    />
                                <TextView
                                    android:id="@+id/txt_country_filme"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text=""
                                    android:textSize="@dimen/h4"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/imv_add_filme"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list"/>
                <ImageView
                    android:id="@+id/imv_assistido_filme"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/success_white"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/left_arrow"
                android:layout_margin="15dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resumo"
            android:textSize="@dimen/h5"
            android:padding="15dp"
            android:background="@color/bluebg"
            android:textColor="@color/bluetxt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:padding="15dp"
            android:background="@color/bg">
            <TextView
                android:id="@+id/txt_plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textSize="@dimen/h5"
                android:textColor="@color/txt"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elenco"
            android:textSize="@dimen/h5"
            android:padding="15dp"
            android:background="@color/bluebg"
            android:textColor="@color/bluetxt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:padding="15dp"
            android:background="@color/bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="Diretor:"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="Roteiro"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_screenplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="Atores"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_actors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prêmios e Avaliações"
            android:textSize="@dimen/h5"
            android:padding="15dp"
            android:background="@color/bluebg"
            android:textColor="@color/bluetxt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:padding="15dp"
            android:background="@color/bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="Prêmios:"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_awards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="Pontuação:"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_metascore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="IMDB"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>



    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informações Gerais"
            android:textSize="@dimen/h5"
            android:padding="15dp"
            android:background="@color/bluebg"
            android:textColor="@color/bluetxt"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:padding="15dp"
            android:background="@color/bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="Produtora:"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_producion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="Website:"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title"
                    android:text="DVD"
                    android:textSize="@dimen/h5"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/txt_dvd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="@dimen/h5"
                    android:textColor="@color/txt"
                    />
            </LinearLayout>

        </LinearLayout>
</LinearLayout>

</ScrollView>
